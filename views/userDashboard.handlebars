{{#if posts.length}}
<section>
    <h2>Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <ul>
            <article class="post">
                <div class="postTitle">
                    <a href="/post/{{id}}">{{title}}</a>
                </div>
                <div class="dash">
                    <strong>Post By {{user.username}} on {{format_date created_at}}</strong>
                </div>
            </article>
        </ul>
        {{/each}}
    </ol>
</section>
{{/if}}
<div>
    <button type="submit"><a href="/views/userDashboard.handlebars/newpost" class="newPostButton">Create New Blog Post</a></button>
</div>